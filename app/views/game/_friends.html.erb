<div id="backbut">
<% if @friends.previous_page %>
  <%= link_to image_tag("back.png"), params.merge(page: @friends.previous_page), :remote => true %>
<% else %>
<%= image_tag("back.png", :title => "No friends this way" ) %>
<% end %>
</div>
<div id="friendcollector">
  <% if @friends.count == 0 %>
    &nbsp
  <% else %>
    <%= render @friends %>
  <% end %>
</div>
<div id="forwardbut">
<% if @friends.next_page %>
  <%= link_to image_tag("forward.png", :mouseover => image_path("forward_rollover.png")), params.merge(page: @friends.next_page), :remote => true %>
<% else %>
<%= image_tag("forward.png", :title => "Spread the word and see if you \n can compete against your friends") %>
<% end %>
</div>