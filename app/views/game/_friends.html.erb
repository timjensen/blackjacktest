<div>
<% if @friends.previous_page %>
  <%= link_to image_tag("back.png"), params.merge(page: @friends.previous_page), :remote => true %>
<% else %>
<%= image_tag("back.png") %>
<% end %>
</div>
<div>
<%= render @friends %>
</div>
<div>
<% if @friends.next_page %>
  <%= link_to image_tag("forward.png"), params.merge(page: @friends.next_page), :remote => true %>
<% else %>
<%= image_tag("forward.png") %>
<% end %>
</div>